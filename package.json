{
    "name": "mimic",
    "displayName": "MIMIC",
    "description": "A lightweight, real-time AI agent that learns from your workflow and evolves with you.",
    "version": "1.0.0",
    "icon": "resources/icon.png",
    "publisher": "mimic-agent",
    "repository": {
        "type": "git",
        "url": "https://github.com/mimic-agent/mimic"
    },
    "engines": {
        "vscode": "^1.90.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished",
        "onLanguageModel:chat"
    ],
    "enabledApiProposals": [
        "languageModels"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languageModelAccess": {
            "canSendMessages": true
        },
        "commands": [
            {
                "command": "mimic.analyzePatterns",
                "title": "MIMIC: Analyze Patterns",
                "icon": "$(sparkle)"
            },
            {
                "command": "mimic.viewInsights",
                "title": "MIMIC: View Insights",
                "icon": "$(lightbulb)"
            },
            {
                "command": "mimic.synthesize",
                "title": "MIMIC: Synthesize Shell Script",
                "icon": "$(terminal)"
            },
            {
                "command": "mimic.synthesizeAgent",
                "title": "MIMIC: Synthesize Agent Skill",
                "icon": "$(hubot)"
            },
            {
                "command": "mimic.runQuickAction",
                "title": "MIMIC: Run Quick Action",
                "icon": "$(play)"
            },
            {
                "command": "mimic.openSkill",
                "title": "MIMIC: Open Skill",
                "icon": "$(file-code)"
            },
            {
                "command": "mimic.removeQuickAction",
                "title": "Remove Action",
                "icon": "$(trash)"
            },
            {
                "command": "mimic.installSkill",
                "title": "MIMIC: Install/Link Skill",
                "icon": "$(tools)"
            },
            {
                "command": "mimic.switchAntigravityAccount",
                "title": "MIMIC: Switch Account (Antigravity OAuth)",
                "category": "MIMIC"
            },
            {
                "command": "mimic.setApiKey",
                "title": "MIMIC: Set Google Gemini API Key",
                "icon": "$(key)"
            },
            {
                "command": "mimic.setGoogleCredentials",
                "title": "MIMIC: Set Google OAuth Credentials (Open Code Style)",
                "icon": "$(key)"
            },
            {
                "command": "mimic.loginAntigravity",
                "title": "MIMIC: Login (Antigravity OAuth)",
                "icon": "$(sign-in)"
            },
            {
                "command": "mimic.refreshQuota",
                "title": "MIMIC: Refresh Quota",
                "icon": "$(refresh)"
            },
            {
                "command": "mimic.installHook",
                "title": "MIMIC: Install Shell Hook (Enable Real-time Perception)",
                "icon": "$(terminal)"
            },
            {
                "command": "mimic.openSettings",
                "title": "MIMIC: Settings",
                "icon": "$(settings-gear)"
            }
        ],
        "menus": {
            "view/item/context": [
                {
                    "command": "mimic.removeQuickAction",
                    "when": "viewItem == quickAction",
                    "group": "inline"
                },
                {
                    "command": "mimic.installSkill",
                    "when": "viewItem == skill_sh",
                    "group": "inline"
                },
                {
                    "command": "mimic.installSkill",
                    "when": "viewItem == skill_md",
                    "group": "inline"
                }
            ]
        },
        "configuration": {
            "title": "MIMIC",
            "properties": {
                "mimic.enableRealtimePerception": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically capture shell commands for AI analysis. (Modifies ~/.zshrc)",
                    "order": 1
                },
                "mimic.insightThreshold": {
                    "type": "number",
                    "default": 100,
                    "description": "Number of shell events required to trigger automatic insight analysis.",
                    "order": 2
                },
                "mimic.synthesisThreshold": {
                    "type": "number",
                    "default": 5,
                    "description": "Number of insights required to enable Skill Synthesis.",
                    "order": 3
                },
                "mimic.quickActionLimit": {
                    "type": "number",
                    "default": 10,
                    "description": "Maximum number of Quick Action buttons to show in the sidebar.",
                    "order": 4
                },
                "mimic.ignoredPatterns": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [],
                    "description": "List of keywords or patterns to exclude from Quick Actions. If a command contains any of these strings, it will be ignored.",
                    "order": 5
                },
                "mimic.openaiApiKey": {
                    "type": "string",
                    "default": "",
                    "description": "Optional. OpenAI API Key. Leave empty if using Antigravity/Copilot.",
                    "order": 6
                },
                "mimic.anthropicApiKey": {
                    "type": "string",
                    "default": "",
                    "description": "Optional. Anthropic Claude API Key.",
                    "order": 7
                },
                "mimic.geminiApiKey": {
                    "type": "string",
                    "default": "",
                    "description": "Optional. Google Gemini API Key.",
                    "order": 8
                }
            }
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "mimic-sidebar",
                    "title": "MIMIC",
                    "icon": "resources/icon.svg"
                }
            ]
        },
        "views": {
            "mimic-sidebar": [
                {
                    "id": "mimic-view",
                    "name": "MIMIC Controls",
                    "icon": "resources/icon.svg"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "test": "npm run compile && node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@types/vscode": "^1.90.0",
        "@vscode/test-electron": "^2.5.2",
        "glob": "^13.0.0",
        "mocha": "^11.7.5",
        "typescript": "^5.3.3"
    }
}